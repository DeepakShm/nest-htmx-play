{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "webpack": false,
    "watchAssets": true,
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../src/public/*",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "../src/views/*",
        "outDir": "dist",
        "watchAssets": true
      }
    ]
  }
}